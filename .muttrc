# Paths ----------------------------------------------
set folder           = ~/mail                  # mailbox location
set alias_file       = ~/.mutt/aliases         # where to store aliases
set query_command    = "abook --mutt-query '%s'" # query abook for aliases
set header_cache     = ~/.mutt.cache/headers   # where to store headers
set message_cachedir = ~/.mutt.cache/bodies    # where to store bodies
set tmpdir           = ~/.mutt.cache/temp      # where to keep temp files
set certificate_file = ~/.mutt/certificates    # where to store certs
set mailcap_path     = ~/.mutt/mailcap         # entries for filetypes
set signature        = ~/.mutt/sig             # my signature file

# Aliases --------------------------------------------
set sort_alias = alias
set reverse_alias = yes
source $alias_file

# Account Settings -----------------------------------
# Default inbox.
set spoolfile = "+chris.bracken-gmail.com/INBOX"

# Alternate email addresses.
alternates chris@bracken.jp

# Mailboxes to show in the sidebar.
mailboxes +chris.bracken-gmail.com/INBOX \
          +chris.bracken-gmail.com/archive \
          +chris.bracken-gmail.com/sent \
          +chris.bracken-gmail.com/drafts \

# Other special folders.
set mbox      = "+chris.bracken-gmail.com/archive"
set postponed = "+chris.bracken-gmail.com/drafts"
set record    = "+chris.bracken-gmail.com/sent"

# Basic Options --------------------------------------
set wait_key = no        # shut up, mutt
set mbox_type = Maildir  # mailbox type
set timeout = 3          # idle time before scanning
set mail_check = 0       # minimum time between scans
set delete               # don't confirm deletes
unset move               # gmail does that
unset confirmappend      # don't prompt every time we append to mailbox
unset mark_old           # read/new is good enough for me
set beep_new             # bell on new mails
set pipe_decode          # strip headers and eval mimes when piping
set thorough_search      # strip headers and eval mimes before searching
set markers = no

# General macros
macro generic,index,pager \ca "<shell-escape>abook<return>" "launch abook"
macro index,pager A "<pipe-message>abook --add-email<return>" "add sender to address book"

# Index View Options ---------------------------------
set date_format = "%m/%d"
set index_format = "%Z  %D  %-20.20F  (%4c)  %s"
set sort = threads
set sort_aux = reverse-last-date-received
set uncollapse_jump
set sort_re
set reply_regexp = "^(([Rr][Ee]?(\[[0-9]+\])?: *)?(\[[^]]+\] *)?)*"
bind index P recall-message

# Index Key Bindings ---------------------------------
bind index gg      first-entry
bind index G       last-entry
bind index H       help
bind index R       group-reply
bind index ?       search-opposite
bind index <space> collapse-thread
macro index a "<limit>all\n" "show all messages (undo limit)"
macro index O "<shell-escape>offlineimap<enter>" "run offlineimap to sync all mail"
macro index o "<shell-escape>offlineimap -qf 'INBOX,[Gmail]/Sent Mail,[Gmail]/Drafts'<enter>" "run offlineimap to sync inbox"
macro index C "<copy-message>?<toggle-mailboxes>" "copy a message to a mailbox"
macro index M "<save-message>?<toggle-mailboxes>" "move a message to a mailbox"
macro index gi "<change-folder>=chris.bracken-gmail.com/INBOX<enter>" "Go to Inbox"
macro index ga "<change-folder>=chris.bracken-gmail.com/archive<enter>" "Go to All Mail"
macro index gs "<change-folder>=chris.bracken-gmail.com/sent<enter>" "Go to Sent Mail"
macro index gd "<change-folder>=chris.bracken-gmail.com/drafts<enter>" "Go to Drafts"
macro index S "<enter-command>unset wait_key<enter><shell-escape>~/.mutt/mutt-notmuch-py -G ~/mail/.tmp/search<enter><change-folder-readonly>+.tmp/search<enter>" "search mail (using notmuch)"

# Pager View Options ---------------------------------
set pager_index_lines = 10 # number of index lines to show
set pager_context = 3      # number of context lines to show
set pager_stop             # don't go to next message automatically
set menu_scroll            # scroll in menus
set tilde                  # show tildes like in vim
unset markers              # no ugly plus signs

set quote_regexp = "^( {0,4}[>|:#%]| {0,4}[a-z0-9]+[>|]+)+"
auto_view text/html
alternative_order text/plain text/enriched text/html

# Pager Key Bindings ---------------------------------
bind pager gg top
bind pager G  bottom
bind pager H  help
bind pager j  next-line
bind pager k  previous-line
bind pager R  group-reply
bind pager ?  search-opposite
bind attach <return> view-mailcap # View attachments properly.
macro pager \Cu "|urlview<enter>" "call urlview to open links"

# Header Options -------------------------------------
ignore *                                # ignore all headers
unignore date: from: to: cc: subject:   # show only these
unhdr_order *                           # some distros order things by default
hdr_order date: from: to: cc: subject:  # and in this order

# Compose View Options -------------------------------
set realname         = "Chris Bracken"
set use_from         = yes
set envelope_from                    # which from?
set sig_dashes                       # dashes before sig
set edit_headers                     # show headers when composing
set fast_reply                       # skip to compose when replying
set askcc                            # ask for CC:
set fcc_attach                       # save attachments with the body
unset mime_forward                   # forward attachments as part of body
set forward_format = "Fwd: %s"       # format of subject when forwarding
set forward_decode                   # decode when forwarding
set attribution = "On %d, %n wrote:" # format of quoting header
set reply_to                         # reply to Reply to: field
set reverse_name                     # reply as whomever it was to
set include                          # include message in replies
set forward_quote                    # include message in forwards

# Editor ----------------------------------------------
set editor='vim + -c "set textwidth=72" -c "set wrap" -c "?^$"'

# Send Options ---------------------------------------
set from          = "chris@bracken.jp"
set sendmail      = "/usr/bin/msmtp -a cbracken"
set sendmail_wait = 0

# Status Bar -----------------------------------------
set status_chars  = " *%A"
set status_format = "───[ Folder: %f ]───[%r%m messages%?n? (%n new)?%?d? (%d to delete)?%?t? (%t tagged)? ]───%>─%?p?( %p postponed )?───"

source ~/.mutt/colors
source ~/.mutt/crypto
